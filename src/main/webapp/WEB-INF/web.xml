<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

	<dependency>
	  <groupId>jakarta.servlet</groupId>
	  <artifactId>jakarta.servlet-api</artifactId>
	  <version>5.0.0</version> <!-- Adjust as needed -->
	  <scope>provided</scope>
	</dependency>

    <!-- Example Servlet Definition -->
    <servlet>
        <servlet-name>AgentServlet</servlet-name> <!-- Change to your servlet's name -->
        <servlet-class>Servlets.AgentServlet</servlet-class> <!-- Change to your servlet's class -->
    </servlet>

    <!-- Example Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>AgentServlet</servlet-name> <!-- Must match the servlet name -->
        <url-pattern>/agentServlet</url-pattern> <!-- URL pattern for this servlet -->
    </servlet-mapping>

    <!-- Session Configuration (Optional) -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
    </session-config>

</web-app>
